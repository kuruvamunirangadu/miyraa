[flake8]
# Maximum line length
max-line-length = 127

# Maximum cyclomatic complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    data/,
    outputs/,
    reports/

# Error codes to ignore
extend-ignore = 
    E203,
    E501,
    W503,
    W504,
    E402

# Select specific error codes
select = E,F,W,C90

# Show statistics
count = True
statistics = True

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:E501,F401
    scripts/*:E501
